{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Backend",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/backend/ECommerce.Api.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "Run Backend",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/backend/ECommerce.Api.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "none",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Watch Backend",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/backend/ECommerce.Api.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Install Frontend Dependencies",
      "type": "npm",
      "script": "install",
      "path": "frontend/",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Run Frontend",
      "type": "npm",
      "script": "dev",
      "path": "frontend/",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build Frontend",
      "type": "npm",
      "script": "build",
      "path": "frontend/",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Start All Services",
      "dependsOn": [
        "Run Backend",
        "Run Frontend"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
